<div class="header">
    <ul class="nav nav-pills pull-right">
        <li class="active"><a href="#" id="LogoutBtn">ログアウト</a></li>
    </ul>
    <h3 class="text-muted">Remember the Cocoa</h3>
</div>

<div class="form-inline" role="form">
    <div class="form-group col-xs-4">
        <input type="text" name="title" id="TaskInput" class="form-control" placeholder="タスクを入力" />
    </div>
    <input type="button" id="TaskInputBtn" class="btn btn-default" value="登録" />
</div>

<table class="table">
    <tbody>
    <% for (var i = 0; i < tasks.length; i++) { %>
        <tr>
            <td><span class="glyphicon glyphicon-ok delete-task" data-id="<%- tasks[i].id %>"></span> <%- tasks[i].title %></td>
        </tr>
    <% } %>
    </tbody>
</table>
